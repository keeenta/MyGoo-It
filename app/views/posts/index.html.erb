<% @page_title = "My Blogoo" %>
<h1><%= @page_title %></h1>
<div class="main">
<h2>新規投稿</h2>
<p id="notice"><%= notice %></p>
<div class="search_form">
    <%= render 'form' %>
    </div><!-- search_form -->

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <div class="posted">
        <td><%= post.body %></td>
        </div>
        <td><%= link_to post.created_at, post %></td>
        <td class="destroy"><%= link_to '削除', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


