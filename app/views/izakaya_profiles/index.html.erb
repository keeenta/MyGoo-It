<%- model_class = IzakayaProfile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:izakaya_id) %></th>
      <th><%= model_class.human_attribute_name(:open_time) %></th>
      <th><%= model_class.human_attribute_name(:close_time) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:menus) %></th>
      <th><%= model_class.human_attribute_name(:access) %></th>
      <th><%= model_class.human_attribute_name(:place) %></th>
      <th><%= model_class.human_attribute_name(:cigaret) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @izakaya_profiles.each do |izakaya_profile| %>
      <tr>
        <td><%= link_to izakaya_profile.id, izakaya_profile_path(izakaya_profile) %></td>
        <td><%= izakaya_profile.izakaya_id %></td>
        <td><%= izakaya_profile.open_time %></td>
        <td><%= izakaya_profile.close_time %></td>
        <td><%= izakaya_profile.image %></td>
        <td><%= izakaya_profile.phone %></td>
        <td><%= izakaya_profile.menus %></td>
        <td><%= izakaya_profile.access %></td>
        <td><%= izakaya_profile.place %></td>
        <td><%= izakaya_profile.cigaret %></td>
        <td><%=l izakaya_profile.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_izakaya_profile_path(izakaya_profile), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      izakaya_profile_path(izakaya_profile),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_izakaya_profile_path,
            :class => 'btn btn-primary' %>
