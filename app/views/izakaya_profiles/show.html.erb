<%- model_class = IzakayaProfile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:izakaya_id) %>:</strong></dt>
  <dd><%= @izakaya_profile.izakaya_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:open_time) %>:</strong></dt>
  <dd><%= @izakaya_profile.open_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:close_time) %>:</strong></dt>
  <dd><%= @izakaya_profile.close_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= @izakaya_profile.image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @izakaya_profile.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:menus) %>:</strong></dt>
  <dd><%= @izakaya_profile.menus %></dd>
  <dt><strong><%= model_class.human_attribute_name(:access) %>:</strong></dt>
  <dd><%= @izakaya_profile.access %></dd>
  <dt><strong><%= model_class.human_attribute_name(:place) %>:</strong></dt>
  <dd><%= @izakaya_profile.place %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cigaret) %>:</strong></dt>
  <dd><%= @izakaya_profile.cigaret %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              izakaya_profiles_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_izakaya_profile_path(@izakaya_profile), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              izakaya_profile_path(@izakaya_profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
